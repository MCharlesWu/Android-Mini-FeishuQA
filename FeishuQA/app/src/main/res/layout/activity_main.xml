<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 主内容区域 - 使用ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- 顶部导航栏 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_bar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 登录按钮（未登录时显示） -->
            <TextView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="#1F2329"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 用户信息区域（登录后显示） -->
            <LinearLayout
                android:id="@+id/layout_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- 用户头像 -->
                <ImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_default_avatar"
                    android:contentDescription="用户头像"
                    android:scaleType="centerCrop" />

                <!-- 用户名 -->
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="用户名"
                    android:textColor="#1F2329"
                    android:textSize="14sp"
                    android:maxWidth="100dp"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <!-- 下拉箭头 -->
                <ImageView
                    android:id="@+id/iv_dropdown_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="展开"
                    android:scaleType="centerInside" />

            </LinearLayout>

            <!-- 菜单按钮（打开侧边栏） -->
            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="菜单"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 新建对话按钮 -->
            <ImageButton
                android:id="@+id/btn_new_chat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="新建对话"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toStartOf="@id/btn_menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 聊天消息显示区域 -->
        <com.example.feishuqa.app.chat.ChatDisplayView
            android:id="@+id/chatDisplayView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintBottom_toTopOf="@id/chatInputView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 欢迎区域 - 居中显示 -->
        <ScrollView
            android:id="@+id/welcome_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintBottom_toTopOf="@id/chatInputView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="24dp">

                <!-- Logo - 渐变圆环 -->
                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bg_gradient_ring"
                    android:contentDescription="Logo" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <!-- 欢迎标题 -->
                <TextView
                    android:id="@+id/tv_welcome_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="嗨！这里是飞书知识问答"
                    android:textColor="#1F2329"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <!-- 推荐话题区域（登录后显示） -->
                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/grid_recommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:columnCount="2"
                    app:rowCount="2"
                    app:useDefaultMargins="true">

                    <!-- 推荐项1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_recommend_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E8F5E9"
                        android:layout_margin="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:minHeight="80dp">

                            <TextView
                                android:id="@+id/tv_recommend_1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="推荐话题1"
                                android:textColor="#1F2329"
                                android:textSize="14sp"
                                android:maxLines="3"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="猜你想问"
                                android:textColor="#FFB300"
                                android:textSize="11sp"
                                android:drawableStart="@drawable/ic_lightbulb"
                                android:drawablePadding="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 推荐项2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_recommend_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_margin="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:minHeight="80dp">

                            <TextView
                                android:id="@+id/tv_recommend_2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="推荐话题2"
                                android:textColor="#1F2329"
                                android:textSize="14sp"
                                android:maxLines="3"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="猜你想问"
                                android:textColor="#FFB300"
                                android:textSize="11sp"
                                android:drawableStart="@drawable/ic_lightbulb"
                                android:drawablePadding="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 推荐项3 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_recommend_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_margin="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:minHeight="80dp">

                            <TextView
                                android:id="@+id/tv_recommend_3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="推荐话题3"
                                android:textColor="#1F2329"
                                android:textSize="14sp"
                                android:maxLines="3"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="猜你想问"
                                android:textColor="#FFB300"
                                android:textSize="11sp"
                                android:drawableStart="@drawable/ic_lightbulb"
                                android:drawablePadding="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 推荐项4 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_recommend_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_margin="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:minHeight="80dp">

                            <TextView
                                android:id="@+id/tv_recommend_4"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="推荐话题4"
                                android:textColor="#1F2329"
                                android:textSize="14sp"
                                android:maxLines="3"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="猜你想问"
                                android:textColor="#FFB300"
                                android:textSize="11sp"
                                android:drawableStart="@drawable/ic_lightbulb"
                                android:drawablePadding="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.gridlayout.widget.GridLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- 欢迎副标题（动态知识点数，登录后显示） -->
                <TextView
                    android:id="@+id/tv_welcome_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="整合你可访问的 0 个知识点，AI 搜索生成回答"
                    android:textColor="#646A73"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:lineSpacingExtra="4dp"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

        <!-- 【修改点】底部输入栏：替换 include 为 ChatInputView -->
        <!-- 注意：Constraint约束要正确 -->
        <com.example.feishuqa.app.keyboard.ChatInputView
            android:id="@+id/chatInputView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 侧边栏内容 - 使用LinearLayout -->
    <include
        android:id="@+id/nav_drawer"
        layout="@layout/layout_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>