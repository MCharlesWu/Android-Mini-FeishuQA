<?xml version="1.0" encoding="utf-8"?>
<!-- 模型选择对话框布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择模型"
        android:textColor="#1F2329"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- 模型列表 -->
    <RadioGroup
        android:id="@+id/rg_models"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- DeepSeek R1 -->
        <RadioButton
            android:id="@+id/rb_deepseek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingHorizontal="12dp"
            android:text="DeepSeek R1"
            android:textColor="#1F2329"
            android:textSize="16sp"
            android:buttonTint="#3370FF"
            android:checked="true" />

        <!-- GPT-4 -->
        <RadioButton
            android:id="@+id/rb_gpt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingHorizontal="12dp"
            android:text="GPT-4"
            android:textColor="#1F2329"
            android:textSize="16sp"
            android:buttonTint="#3370FF" />

        <!-- Claude 3.5 -->
        <RadioButton
            android:id="@+id/rb_claude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingHorizontal="12dp"
            android:text="Claude 3.5"
            android:textColor="#1F2329"
            android:textSize="16sp"
            android:buttonTint="#3370FF" />

        <!-- 通义千问 -->
        <RadioButton
            android:id="@+id/rb_qwen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingHorizontal="12dp"
            android:text="通义千问"
            android:textColor="#1F2329"
            android:textSize="16sp"
            android:buttonTint="#3370FF" />

        <!-- 豆包 -->
        <RadioButton
            android:id="@+id/rb_doubao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingHorizontal="12dp"
            android:text="豆包"
            android:textColor="#1F2329"
            android:textSize="16sp"
            android:buttonTint="#3370FF" />

    </RadioGroup>

</LinearLayout>





